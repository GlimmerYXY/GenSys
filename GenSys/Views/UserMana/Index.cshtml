@{
    ViewBag.Title = "用户管理";
}
<h2>@ViewBag.Title</h2>

@section css {
    <link href="~/Scripts/Bootstrap-Table-1.5.0/bootstrap-table.min.css" rel="stylesheet" />
    <style type="text/css">
    </style>
}


@using (Html.BeginForm("Index", "UserMana", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="col-md-1">
        <select class="choose" name="role_id" style="width:90px;height:25px">
            <option>用户类型...</option>
            <option>操作员</option>
            <option>管理员</option>
            <option>超级管理员</option>
        </select>
    </div>
    <div class="col-md-1">
        <input type="text" name="username" placeholder="输入用户名" style="width:90px;height:25px" />
    </div>
    <div class="col-md-1">
        <input type="text" name="password" placeholder="输入密码" style="width:90px;height:25px" />
    </div>
    <div class="col-md-1">
        <input type="text" name="name" placeholder="输入姓名" style="width:90px;height:25px" />
    </div>
    <div class="col-md-1">
        <input type="text" name="dept_id" placeholder="输入部门" style="width:90px;height:25px" />
    </div>
    <div class="col-md-1">
        <input type="text" name="position" placeholder="输入职务" style="width:90px;height:25px" />
    </div>
    <div class="col-md-1">
        <input type="text" name="qualification" placeholder="输入资质" style="width:90px;height:25px" />
    </div>
    <div class="col-md-1">
        <input type="text" name="id_number" placeholder="身份证号码" style="width:90px;height:25px" />
    </div>
    <div class="col-md-1">
        <input type="text" name="phone_number" placeholder="输入手机号" style="width:90px;height:25px" />
    </div>
    <div class="col-md-1">
        <button type="button" onclick="chooseFile.click()"style="width:90px;height:25px">导入照片</button>
        <input type="file" id="chooseFile" style="display:none">
    </div>
    <div class="col-md-1">
        <div>
            <button id="upload" type="submit" style="height:25px">提交</button>
        </div>
    </div>
}
    

<br />
<br />

<form class="form-horizontal" role="form" method="post" >
    <div class="col-md-1">
        <label style="width:90px;height:25px;min-width:90px">或从文件导入</label>
    </div>
    <div class="col-md-1">
        <button type="button" onclick="chooseFile.click()"style="width:90px;height:25px;" >导入文件</button>
        <input type="file" id="chooseFile" style="display:none;">
    </div>
    <div class="col-md-1">
        <div>
            <button id="upload" style="height:25px">上传</button>
        </div>
    </div>
</form>
<br />

<div id="formcontent">
    @ViewBag.SubmitForm
</div>

<div id="testdb">
    @ViewBag.database
</div>

<div class="row">
    <div class="col-md-12">
        <table id="table-javascript"></table>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/Bootstrap-Table-1.5.0/bootstrap-table.min.js"></script>
    <script src="~/Scripts/Bootstrap-Table-1.5.0/locale/bootstrap-table-en-US.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#table-javascript').bootstrapTable({
                method: 'get',
                url: '/UserMana/GetData',
                cache: false,
                striped: true,
                pagination: true,
                pageSize: 50,
                pageList: [10, 25, 50, 100],
                minimumCountColumns: 2,
                clickToSelect: true,
                columns: [{
                    field: 'id',
                    title: 'ID',
                    align: 'center',
                    valign: 'middle',
                    sortable: true
                }, {
                    field: 'role_id',
                    title: '用户类型',
                    align: 'center',
                    valign: 'middle',
                    sortable: true
                }, {
                    field: 'username',
                    title: '用户名',
                    align: 'center',
                    valign: 'middle',
                    sortable: true
                }, {
                    field: 'password',
                    title: '密码',
                    align: 'center',
                    valign: 'middle',
                    sortable: true
                }, {
                    field: 'salt',
                    title: 'MD5盐',
                    align: 'center',
                    valign: 'middle',
                    sortable: true
                }, {
                    field: 'name',
                    title: '姓名',
                    align: 'center',
                    valign: 'middle',
                    sortable: true
                }, {
                    field: 'dept_id',
                    title: '部门',
                    align: 'center',
                    valign: 'middle',
                    sortable: true
                }, {
                    field: 'position',
                    title: '职务',
                    align: 'center',
                    valign: 'middle',
                    sortable: true
                }, {
                    field: 'qualification',
                    title: '资质',
                    align: 'center',
                    valign: 'middle',
                    sortable: true
                }, {
                    field: 'id_number',
                    title: '身份证号码',
                    align: 'center',
                    valign: 'middle',
                    sortable: true
                }, {
                    field: 'phone_number',
                    title: '手机',
                    align: 'center',
                    valign: 'middle',
                    sortable: true
                }, {
                    field: 'photo',
                    title: '照片',
                    align: 'center',
                    valign: 'middle',
                    sortable: true
                }, {
                    field: 'register_date',
                    title: '注册日期',
                    align: 'center',
                    valign: 'middle',
                    sortable: true,
                    formatter: TimeFormatter
                }, {
                    field: 'Remove',
                    title: '删除',
                    align: 'center',
                    valign: 'middle',
                    clickToSelect: false,
                    formatter: RemoveFormatter,
                    events: RemoveEvents
                }]
            });

        });

        function RemoveFormatter(value, row, index) {
            /*value = index;
            return value;*/
            if (row.role_id != "超级管理员") {
                return [
                ' <a class="remove" href="javascript:void(0)" title="Remove">',
                '<i class="glyphicon glyphicon-remove-sign"></i>',
                '</a>'
                ].join('');
            }
            else {
                return "不可删除/修改";
            }
        }

        function TimeFormatter(timestamp) {
            if (timestamp != null) {
                var date = new Date(parseInt(timestamp.replace("/Date(", "").replace(")/", ""), 10));
                var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
                var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
                return date.getFullYear() + "-" + month + "-" + currentDate;
            }
        }


        window.RemoveEvents = {
            'click .remove': function (e, value, row, index) {
                alert('You click remove icon, row: ' + JSON.stringify(row));
                console.log(value, row, index);
            }
        };

    </script>
}
